<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Createbookingactivity">

    <TextView
        android:id="@+id/CBtext"
        android:layout_width="330dp"
        android:layout_height="88dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="608dp"
        android:text="Create Booking"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/checkindateid"
        android:layout_width="236dp"
        android:layout_height="51dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="508dp"
        android:background="@drawable/usernamebackground"
        android:text="Check-in date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/checkoutdateid"
        android:layout_width="236dp"
        android:layout_height="51dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="408dp"
        android:background="@drawable/usernamebackground"
        android:text="Check-out date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/numberpeopleid"
        android:layout_width="236dp"
        android:layout_height="51dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="304dp"
        android:background="@drawable/usernamebackground"
        android:text="Number of people"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/roomtypeid"
        android:layout_width="236dp"
        android:layout_height="51dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/usernamebackground"
        android:text="Room type"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/CBcreatebooking"
        android:layout_width="196dp"
        android:layout_height="79dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="84dp"
        android:backgroundTint="#00BE17"
        android:text="Create Booking"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>