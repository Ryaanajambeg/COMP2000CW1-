        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="202dp"
        android:layout_height="27dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="204dp"
