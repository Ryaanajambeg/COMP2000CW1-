<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomescreenActivity">

    <TextView
        android:id="@+id/HOMEtext"
        android:layout_width="299dp"
        android:layout_height="102dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="584dp"
        android:text="HOME"
        android:textColor="@color/black"
        android:textSize="54dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/selectoptointext"
        android:layout_width="361dp"
        android:layout_height="46dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="524dp"
        android:text="Please select an option below"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/HBmanagebutton"
        android:layout_width="301dp"
        android:layout_height="108dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="404dp"
        android:backgroundTint="#6490D2"
        android:text="Create Booking"
        android:textSize="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/HBBmanagebutton"
        android:layout_width="301dp"
        android:layout_height="108dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="276dp"
        android:backgroundTint="#DFD25B"
        android:text="Manage Booking"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/HBcancelbutton"
        android:layout_width="301dp"
        android:layout_height="108dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="144dp"
        android:backgroundTint="#D65C5C"
        android:text="Cancel Booking"
        android:textSize="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/HBbackbutton"
        android:layout_width="193dp"
        android:layout_height="65dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="40dp"
        android:text="Back"
        android:textSize="28dp"
        android:backgroundTint="#948A36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>