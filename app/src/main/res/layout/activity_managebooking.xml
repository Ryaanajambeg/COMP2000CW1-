<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".managebookingActivity">

    <TextView
        android:id="@+id/managebookingtext"
        android:layout_width="301dp"
        android:layout_height="93dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="608dp"
        android:text="Manage Booking"
        android:textSize="39dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/changecheckin"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="512dp"
        android:background="@drawable/usernamebackground"
        android:text="Change Check-in date"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/changecheckout"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="404dp"
        android:background="@drawable/usernamebackground"
        android:text="Change Check-out date"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/changenopeople"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="308dp"
        android:background="@drawable/usernamebackground"
        android:text="Change number of people"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/changeroomtype"
        android:layout_width="263dp"
        android:layout_height="48dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/usernamebackground"
        android:text="Change room type"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/MBconfirm"
        android:layout_width="187dp"
        android:layout_height="67dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="112dp"
        android:text="Confirm"
        android:textSize="29dp"
        android:backgroundTint="#1CAD3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/MBPrevious"
        android:layout_width="194dp"
        android:layout_height="54dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#E3C629"
        android:text="Check previous bookings"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>